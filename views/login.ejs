<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login - Spotify</title>
    <link rel="stylesheet" href="/static/css/login.css" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/remixicon@4.1.0/fonts/remixicon.css"
    />
  </head>
  <body>
    <div id="main">
      <nav>
        <img src="/static/Images/spotify logo.png" alt="" />
      </nav>
      <main>
        <section>
          <div id="heading">
            <h1>Log in to Spotify</h1>
          </div>
          <div id="options">
            <div class="box">
              <div class="logo">
                <img src="/static/Images/signinoptions/google.png" alt="" />
              </div>
              <h4>Continue with Google</h4>
            </div>
            <div class="box">
              <div class="logo">
                <img src="/static/Images/signinoptions/facebook.png" alt="" />
              </div>
              <h4>Continue with Facebook</h4>
            </div>
            <div class="box">
              <div class="logo">
                <img src="/static/Images/signinoptions/apple.png" alt="" />
              </div>
              <h4>Continue with Apple</h4>
            </div>
            <div class="box">
              <h4>Continue with phone number</h4>
            </div>
          </div>
          <div id="line"></div>
          <form action="">
            <div id="fstblck">
              <span>Email or username</span>
              <input
                type="text"
                required
                name=""
                placeholder="Email or username"
              />
            </div>
            <div id="sndblck">
              <span>Password</span>
              <input type="password" required name="" placeholder="Password" autocomplete="current-password" />
              <div class="wrap">
                <img src="/static/Images/Icons/eye10.png" alt="" />
              </div>
            </div>
            <div class="switch">
              <div id="switchbox">
                <div id="dot"></div>
              </div>

              <span>Remember me</span>
            </div>
            <div id="btn">
              <button>Log In</button>
            </div>
            <div id="frgt">
              <span>Forgot your password?</span>
            </div>
          </form>
          <div id="line2"></div>

          <div id="btm">
            <span
              >Don't have an account?<a href="#"> Sign up for Spotify </a></span
            >
          </div>
        </section>
        <footer>
          <span
            >This site is protected by reCAPTCHA and the Google
            <a href="#">Privacy Policy </a> and
            <a href="#">Terms of service </a> apply.</span
          >
        </footer>
      </main>
    </div>
    <script>
      document.addEventListener("DOMContentLoaded", function() {
        const eyeIcon = document.querySelector(".wrap img");
        const passwordInput = document.querySelector("input[type='password']");
    
        eyeIcon.addEventListener("click", function() {
          if (passwordInput.type === "password") {
            passwordInput.type = "text";
            eyeIcon.src = "/static/Images/Icons/eye9.png"; // Change to eye9 image
          } else {
            passwordInput.type = "password";
            eyeIcon.src = "/static/Images/Icons/eye10.png"; // Change to eye10 image
          }
        });
      });
    </script>
    
  </body>
</html>
